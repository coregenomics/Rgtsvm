# Compilers
EXT = cu

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ @CUDA_CFLAGS@ @LIBR_CFLAGS@ @LIBR_CXXFLAGS@ @LIBR_CXXPICFLAGS@
NVCC = @NVCC@
NVCCFLAGS = @CUDA_CFLAGS@ @NVCCFLAGS@ -Xcompiler @LIBR_CXXPICFLAGS@
LDFLAGS = @CUDA_RPATH@ @LDFLAGS@ @CUDA_LIBS@ @LIBR_LIBS@

# Program-specifics
TARGET = Rgtsvm.so

HEADERS = \
	Rgtsvm.hpp \
	svm.hpp \
	cuda.hpp \
	cuda_sparse_kernel.hpp \
	cuda_reduce.hpp \
	cuda_find_largest.hpp \
	cuda_partial_sum.hpp \
	cuda_array.hpp \
	cuda_exception.hpp \
	cuda_helpers.hpp \
	helpers.hpp

PRECOMPILED_HEADER = \
	headers.hpp.gch

OBJECTS = \
	Rgtsvm.o \
	Rgtsvm2.o \
	Rgtsvm_RI.o \
	cuda_array.o \
	cuda_exception.o \
	cuda_find_largest.o \
	cuda_partial_sum.o \
	cuda_reduce.o \
	cuda_sparse_kernel.o \
	svm.o \
	svmlight.o

# Build rules
all: $(TARGET)

$(TARGET) : $(OBJECTS)
	$(NVCC) -shared $(LDFLAGS) $(OBJECTS) -o $@

%.o : %.cu
	$(NVCC) $(NVCCFLAGS) -c $< -o $@

%.o : %.cpp $(PRECOMPILED_HEADER)
	$(CXX) $(CXXFLAGS) -c $< -o $@

%.hpp.gch : %.hpp $(HEADERS)
	$(CXX) $(CXXFLAGS) $<

clean:
	rm -rf $(OBJECTS) $(TARGET) $(PRECOMPILED_HEADER)
